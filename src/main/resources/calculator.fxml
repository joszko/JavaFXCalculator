<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mbr.calculator.Controller">
    <columnConstraints>
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
    </columnConstraints>
    <TextField fx:id="display" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0" onAction="#clearDisplay" disable="true"/>
    <Button fx:id="buttonClear" text="C" GridPane.columnIndex="3" GridPane.rowIndex="0" onAction="#buttonPressed" />

    <Button fx:id="button7"  text="7" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#buttonPressed"/>
    <Button fx:id="button8"  text="8" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#buttonPressed" />
    <Button fx:id="button9"  text="9" GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#buttonPressed"/>
    <Button fx:id="buttonDivide"  text="/" GridPane.columnIndex="3" GridPane.rowIndex="1" onAction="#buttonPressed"/>

    <Button fx:id="button4"  text="4" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#buttonPressed"/>
    <Button fx:id="button5"  text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#buttonPressed"/>
    <Button fx:id="button6"  text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#buttonPressed"/>
    <Button fx:id="buttonMultiply"  text="*" GridPane.columnIndex="3" GridPane.rowIndex="2" onAction="#buttonPressed"/>

    <Button fx:id="button1"  text="1" GridPane.columnIndex="0" GridPane.rowIndex="3" onAction="#buttonPressed"/>
    <Button fx:id="button2"  text="2" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#buttonPressed"/>
    <Button fx:id="button3"  text="3" GridPane.columnIndex="2" GridPane.rowIndex="3" onAction="#buttonPressed"/>
    <Button fx:id="buttonMinus"  text="-" GridPane.columnIndex="3" GridPane.rowIndex="3" onAction="#buttonPressed"/>

    <Button fx:id="buttonDot"  text="." GridPane.columnIndex="0" GridPane.rowIndex="4" onAction="#buttonPressed"/>
    <Button fx:id="button0"  text="0" GridPane.columnIndex="1" GridPane.rowIndex="4" onAction="#buttonPressed"/>
    <Button  text="=" GridPane.columnIndex="2" GridPane.rowIndex="4" onAction="#buttonEqualsPressed"/>
    <Button fx:id="buttonAdd"  text="+" GridPane.columnIndex="3" GridPane.rowIndex="4" onAction="#buttonPressed"/>


</GridPane>
